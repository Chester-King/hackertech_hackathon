<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/off_back"
    android:orientation="vertical"
    tools:context=".StatActivity">

<!--   03DAC6 -->
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal"
        >

            <com.google.android.material.button.MaterialButton
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:backgroundTint="@color/colorButton"
                android:text="Heart Rate"
                android:textColor="#000000"
                android:layout_margin="5dp"
                />

        <com.google.android.material.button.MaterialButton
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:backgroundTint="@color/colorButton"
            android:layout_margin="5dp"
            android:text="Temprature"
            android:textColor="#000000"
            />



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:background="#eee"
        >

        <TextView
            android:id="@+id/heartrate"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Loading..."
            android:textAlignment="center"
            android:gravity="center"
            android:textColor="#000000"
            />

        <TextView
            android:id="@+id/temprature"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Loading..."
            android:textAlignment="center"
            android:gravity="center"
            android:textColor="#000000"
            />




    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:background="#8a1"
        android:layout_marginTop="5dp"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="Latitude : Loading..."
            android:gravity="center"
            android:id="@+id/latitude"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="Longitude : Loading..."
            android:gravity="center"
            android:id="@+id/longitude"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        >


        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/locate"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:lottie_autoPlay="true"
            app:lottie_fileName="map.json"
            app:lottie_loop="true"
            />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/sos_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/sos"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Loading State..."
            android:gravity="center"
            android:textSize="30sp"
            android:background="#FFCB2B"
            />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/assist"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:lottie_autoPlay="true"
            app:lottie_fileName="danger.json"
            app:lottie_loop="true"
            android:visibility="gone"
            />


    </LinearLayout>






</LinearLayout>